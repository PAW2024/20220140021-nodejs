<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Custom Navbar</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/nav.css">
</head>
<body>
  <nav class="navbar navbar-expand-lg custom-navbar">
    <div class="container-fluid">
      <!-- Logo -->
      <a class="navbar-brand" href="/">
        <img src="https://yt3.ggpht.com/qcFc5TN623eDmDwI6qtkI5bL4_q81cjbgE1ibbE6D17bZ0DVu1KX0s9LMEEB-PQ46fBwErmM6w=s108-c-k-c0x00ffffff-no-rj" alt="Logo" width="40" height="40">
      </a>

      <!-- Navbar Links -->
      <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/contact">Contact</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/todo-view">Todo</a>
          </li>
        </ul>
      </div>

      <!-- Logout -->
      <form class="d-flex align-items-center" action="/logout" method="POST">
        <button class="btn btn-link nav-link signout-btn d-flex align-items-center" type="submit">
          <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcR6P8kq1orWBk7ouVo6ig4I6ZgxBXAD1vUYig&s" alt="Sign Out Icon" style="width: 20px; height: 20px; margin-right: 8px;">
          Sign Out
        </button>
        
      </form>
    </div>
  </nav>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
